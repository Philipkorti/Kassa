<Window x:Class="Kassa.LieferDate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kassa"
        mc:Ignorable="d"
        Title="LieferDate" Height="400" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DatePicker Name="lieferdate" Width="200" Height="50"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button Margin="30,0,0,0" Width="150" Height="50" Name="set" Click="set_Click">Set</Button>
            <Button Margin="20,0,0,0" Width="150" Height="50" Name="abbrechen">Abbrechen</Button>
        </StackPanel>
        
    </Grid>
</Window>
